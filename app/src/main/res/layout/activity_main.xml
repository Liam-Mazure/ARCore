<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <fragment
            android:id="@+id/ar_fragment"
            android:name="com.example.arcore.CustomArFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/amongus"
        android:layout_width="69dp"
        android:layout_height="61dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/amongus" />

    <ImageView
        android:id="@+id/charmander"
        android:layout_width="0dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toStartOf="@+id/cubone"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/amongus"
        app:layout_constraintTop_toTopOf="@+id/amongus"
        app:srcCompat="@drawable/charmander" />

    <ImageView
        android:id="@+id/cubone"
        android:layout_width="0dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toStartOf="@+id/mew"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/charmander"
        app:layout_constraintTop_toTopOf="@+id/amongus"
        app:srcCompat="@drawable/cubone" />

    <ImageView
        android:id="@+id/mew"
        android:layout_width="0dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toStartOf="@+id/pikachu"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/cubone"
        app:layout_constraintTop_toTopOf="@+id/amongus"
        app:srcCompat="@drawable/mew" />

    <ImageView
        android:id="@+id/pikachu"
        android:layout_width="0dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toStartOf="@+id/snorlax"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/mew"
        app:layout_constraintTop_toTopOf="@+id/amongus"
        app:srcCompat="@drawable/pikachu" />

    <ImageView
        android:id="@+id/snorlax"
        android:layout_width="0dp"
        android:layout_height="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/pikachu"
        app:layout_constraintTop_toTopOf="@+id/amongus"
        app:srcCompat="@drawable/snorlax" />

</androidx.constraintlayout.widget.ConstraintLayout>
